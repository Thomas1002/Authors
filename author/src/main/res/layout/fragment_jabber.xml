<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mirabellehegnet.authors.JabberActivity$PlaceholderFragment">
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/wikipediaButton"
        android:text="@string/wikipedia"
        android:onClick="openWikipedia"
        android:contentDescription="@string/wikipediaContentDescription"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/image"
        android:contentDescription="@string/imageContentDescription"
        android:id="@+id/imageButton"
        android:layout_toRightOf="@id/wikipediaButton"
        />
    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/wikipediaButton"
        android:id="@+id/wikiWebView"
        />
</RelativeLayout>
